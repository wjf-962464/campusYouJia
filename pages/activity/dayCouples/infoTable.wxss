/* pages/activity/dayCouples/infoTable.wxss */

.table_title_img {
  width: 100%;
  height: 100rpx;
}

/* 表格单元格 */

.table_line {
  padding: 16rpx 20rpx;
  margin-top: 20rpx;
  height: 100rpx;
  width: 80%;
  margin-left: 7%;
  border-radius: 10rpx;
  background: white;
  display: block;
}

/* 表格大单元格 */

.table_line2 {
  height: 370rpx;
}

/* 表格小标题 */

.table_hint {
  height: 50rpx;
  line-height: 50rpx;
  color: #1c2438;
  font-size: 30rpx;
  font-family: KaiTi;
  font-weight: bold;
  letter-spacing: 2rpx;
  display: block;
}

/* 输入框 */

.input_line {
  height: 50rpx;
  line-height: 50rpx;
  color: #495060;
  font-size: 28rpx;
  font-family: KaiTi;
  display: block;
}

.input_line2 {
  height: 100rpx;
}

/* 输入占位符 */

.input_hint {
  color: #80848f;
  font-size: 28rpx;
  font-family: KaiTi;
}

/* 单选单元格 */

.radio_item {
  width: 40%;
  margin-left: 30%;
  color: #495060;
  font-size: 28rpx;
  height: 50rpx;
  font-family: KaiTi;
  line-height: 50rpx;
  display: block;
}

.radio_item2 {
  text-align: center;
  color: #495060;
  font-size: 28rpx;
  height: 50rpx;
  font-family: KaiTi;
  line-height: 50rpx;
  display: block;
}

/* 提交按钮 */

.submitBtn {
  display: block;
  background-color: #2ba245;
  border-radius: 15rpx;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  margin-left: 10%;
  width: 80%;
  height: 80rpx;
  line-height: 80rpx;
  color: white;
  font-size: 34rpx;
  letter-spacing: 7rpx;
}

/* 标签滑动 */

.mark_swiper {
  height: 220rpx;
}

.swiper_item {
  margin-bottom: 20rpx;
  height: 100rpx;
}

/* 标签单元 */

.mark_label {
  text-align: center;
  color: #495060;
  font-size: 28rpx;
  height: 50rpx;
  font-family: KaiTi;
  line-height: 50rpx;
  display: block;
  letter-spacing: 4rpx;
}

/* 标签提示字 */

.mark_hint {
  height: 40rpx;
  line-height: 40rpx;
  color: #1c2438;
  font-size: 28rpx;
  font-family: KaiTi;
  font-weight: bold;
  letter-spacing: 2rpx;
  display: block;
}

/* 未选中的 背景样式 */

radio .wx-radio-input {
  border-radius: 50%; /* 圆角 */
  border: none;
  background: none;
}

/* 选中后的 背景样式 （红色背景 无边框 可根据UI需求自己修改） */

radio .wx-radio-input.wx-radio-input-checked {
  border: none;
  background: none;
}

/* 选中后的 对勾样式 （白色对勾 可根据UI需求自己修改） */

radio .wx-radio-input.wx-radio-input-checked::before {
  text-align: center;
  font-size: 30rpx; /* 对勾大小 30rpx */
  color: red; /* 对勾颜色 白色 */
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}

/* 未选中的 背景样式 */

checkbox .wx-checkbox-input {
  border-radius: 50%; /* 圆角 */
  width: 40rpx;
  border: none;
  background: none;
}

/* 选中后的 背景样式 （红色背景 无边框 可根据UI需求自己修改） */

checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  border: none;
  background: none;
}

/* 选中后的 对勾样式 （白色对勾 可根据UI需求自己修改） */

checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  text-align: center;
  font-size: 30rpx; /* 对勾大小 30rpx */
  color: red; /* 对勾颜色 白色 */
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}
